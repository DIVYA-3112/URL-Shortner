<!-- This is the homepage of the URL-Shortner. It contains a form to enter the URL to shorten. -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rendering Homepage</title>
</head>
<body>
    <h1>Welcome to the URL-Shortner</h1>

    <% if (locals.urls && locals.urls.length > 0) { %>
        <h2>Previously shortened URLs</h2>
        <table border="1">
            <thead>
                <tr>
                    <th>Index No</th>
                    <th>Original URL</th>
                    <th>Short ID</th>
                    <th>Visited Length</th>
                </tr>
            </thead>
            <tbody>
                <% urls.forEach((url, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= url.originalUrl %></td>
                        <td><a href="http://localhost:5000/api/<%= url.shortId %>"><%= url.shortId %></a></td>
                        <td><%= url.visited ? url.visited.length : 0 %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>

    <form action="/api/shorten" method="post">
        <input type="text" name="url" placeholder="Enter URL to shorten" required>
        <button type="submit">Shorten</button>
    </form>
</body>
</html>